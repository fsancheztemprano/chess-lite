{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/consumer-pact": ["libs/consumer-pact/src/index.ts"],
      "@app/ui/core": ["libs/ui/core/src/index.ts"],
      "@app/ui/feature/administration": ["libs/ui/feature/administration/src/index.ts"],
      "@app/ui/feature/authentication": ["libs/ui/feature/authentication/src/index.ts"],
      "@app/ui/feature/home": ["libs/ui/feature/home/src/index.ts"],
      "@app/ui/feature/tic-tac-toe": ["libs/ui/feature/tic-tac-toe/src/index.ts"],
      "@app/ui/feature/user": ["libs/ui/feature/user/src/index.ts"],
      "@app/ui/shared/app": ["libs/ui/shared/app/src/index.ts"],
      "@app/ui/shared/common": ["libs/ui/shared/common/src/index.ts"],
      "@app/ui/shared/core": ["libs/ui/shared/core/src/index.ts"],
      "@app/ui/shared/custom-forms": ["libs/ui/shared/custom-forms/src/index.ts"],
      "@app/ui/shared/domain": ["libs/ui/shared/domain/src/index.ts"],
      "@app/ui/shared/feature/administration": ["libs/ui/shared/feature/administration/src/index.ts"],
      "@app/ui/shared/feature/tic-tac-toe": ["libs/ui/shared/feature/tic-tac-toe/src/index.ts"],
      "@app/ui/testing": ["libs/ui/shared/testing/src/index.ts"],
      "@hal-form-client": ["libs/hal-form-client/src/index.ts"],
      "@app/transloco-scope": ["tools/transloco/transloco.scope.ts"]
    }
  },
  "exclude": ["node_modules", "node", "tmp", ".github", ".run", ".idea", ".angular", "apps/api"]
}
